{
  // Narrow the include set to backend and shared schema areas to avoid
  // front-end and generated artifacts during focused typechecking.
  "include": ["server/**/*", "db/**/*", "shared/schema/**/*", "shared/**/*/schema/**/*"],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "**/*.test.ts",
    // Exclude compiled/transpiled artifacts and dist folders under shared
    "shared/**/dist/**",
    "shared/**/build/**",
    "shared/**/tasks/**/dist/**",
    "shared/core/**",
    // Also exclude raw source under shared/core to prevent accidental parsing
    "shared/core/src/**"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "ignoreDeprecations": "5.0",
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/typescript/tsbuildinfo",
  "noEmit": true,
  "module": "ES2020",
  "target": "ES2020",
    "strict": true,
    "lib": ["ES2020", "dom", "dom.iterable"],
    "jsx": "preserve",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "allowJs": true,
    "allowImportingTsExtensions": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "types": ["node", "vite/client"],
    "paths": {
      "@db": ["./db/index.ts"],
      "@db/*": ["./db/*"],
      "@server/*": ["./server/*"],
      "@/*": ["./client/src/*"],
      "@shared/*": ["./shared/*"],
      "shared/*": ["./shared/*"],
      "@shared/core": ["./shared/core/src/index.ts"],
      "@shared/core/*": ["./shared/core/src/*"],
      "@shared/schema": ["./shared/schema/index.ts"],
      "@shared/schema/*": ["./shared/schema/*"],

    }
  }
}
 

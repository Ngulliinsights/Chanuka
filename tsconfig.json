{
  "files": [],
  "references": [
    { "path": "./client" },
    { "path": "./server" },
    { "path": "./shared" }
  ],
  "include": [],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "coverage"
  ],
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2022",
    "lib": [
      "ES2022",
      "dom",
      "dom.iterable"
    ],
    "jsx": "react-jsx",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "useUnknownInCatchVariables": true,

    /* Modules */
    "module": "ES2022",
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "@shared": ["shared"],
      "@shared/*": ["shared/*"],
      "@shared/types": ["shared/types"],
      "@shared/types/*": ["shared/types/*"],
      "@shared/validation": ["shared/validation"],
      "@shared/validation/*": ["shared/validation/*"],
      "@shared/constants": ["shared/constants"],
      "@shared/constants/*": ["shared/constants/*"],
      "@shared/core": ["server/infrastructure/core"],
      "@shared/core/*": ["server/infrastructure/core/*"],
      "@server/infrastructure/schema": ["server/infrastructure/schema"],
      "@server/infrastructure/schema/*": ["server/infrastructure/schema/*"],
      "@server/infrastructure/database": ["server/infrastructure/database"],
      "@server/infrastructure/database/*": ["server/infrastructure/database/*"],
      "@shared/platform": ["shared/platform"],
      "@shared/i18n": ["shared/i18n"],
      "@server": ["server"],
      "@server/*": ["server/*"],
      "@server/infrastructure/core/*": ["server/infrastructure/core/*"],
      "@server/infrastructure/persistence/*": ["server/infrastructure/database/persistence/*"],
      "@server/infrastructure/observability/*": ["server/infrastructure/observability/*"],
      "@client": ["client/src"],
      "@client/*": ["client/src/*"],
      "@tests": ["tests"],
      "@tests/*": ["tests/*"]
    },
    "resolveJsonModule": true,
    "allowImportingTsExtensions": false,
    "allowJs": true,
    "checkJs": false,

    /* Emit */
    "declaration": true,
    "removeComments": true,
    "importHelpers": true,
    "downlevelIteration": true,
    "sourceMap": true,
    "verbatimModuleSyntax": false,

    /* Interop Constraints */
    "isolatedModules": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking - Strict Mode */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "exactOptionalPropertyTypes": false, // Disabled temporarily - causing hundreds of errors with | undefined

    /* Type Checking - Additional Checks */
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "allowUnusedLabels": false,
    "allowUnreachableCode": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    /* Completeness */
    "skipLibCheck": true,

    /* Performance */
    "incremental": true,

    /* Type Definitions */
    "types": [
      "node",
      "vite/client",
      "vitest/globals"
    ],

    /* Composite project setup for monorepo */
    "composite": false
  }
}

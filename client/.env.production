# Production Environment Configuration for Frontend Client
VITE_API_URL=/api
VITE_APP_NAME=Chanuka Platform
VITE_APP_VERSION=1.0.0
VITE_ENVIRONMENT=production

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_DEBUG=false
VITE_ENABLE_SERVICE_WORKER=true

# API Configuration
VITE_API_TIMEOUT=10000
VITE_API_RETRY_ATTEMPTS=3

# Performance Settings
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_BUNDLE_ANALYZER=false

# Production-specific settings
VITE_ENABLE_HOT_RELOAD=false
VITE_ENABLE_DEV_TOOLS=false
VITE_ENABLE_MOCK_DATA=false

# Error reporting (enabled in production)
VITE_SENTRY_DSN=${VITE_SENTRY_DSN}
VITE_GOOGLE_ANALYTICS_ID=${VITE_GOOGLE_ANALYTICS_ID}

# Production mode settings
VITE_SUPPRESS_CONNECTION_ERRORS=false
VITE_API_MAX_RETRIES=3
VITE_API_RETRY_BASE_DELAY=1000
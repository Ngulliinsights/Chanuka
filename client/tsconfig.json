{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    // Language and Environment
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",

    // Module Resolution
    "module": "ES2022",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,

    // Type Checking - Progressive strict mode for Chanuka UI upgrade
    "strict": true,
    "exactOptionalPropertyTypes": false,
    "noImplicitAny": true,
    "noImplicitReturns": false,
    "noImplicitOverride": false,
    "noUncheckedIndexedAccess": false,
    "noImplicitThis": true,
    "skipLibCheck": true,
    "allowJs": true,

    // Emit
    "noEmit": true,
    "declaration": false,
    "isolatedModules": true,
    "composite": false,

    // Interop Constraints
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,

    // Project Structure
    "baseUrl": ".",
    // Silence TypeScript 7.0 deprecation warnings for `baseUrl` until migration
    "ignoreDeprecations": "6.0",
    // Keep TypeScript deprecation warnings suppressed until planned migration to TS 7.0
    // Upgrade this to "5.6" when preparing for TS7, or remove once migrated.

    // Path Mappings
    "paths": {
      "@/*": ["src/*"],
      "@client/*": ["src/*"],
      "@shared/*": ["src/shared/*"],
      "@chanuka/shared": ["../shared"],
      "@chanuka/shared/*": ["../shared/*"]
    },

    // Type Definitions
    "types": ["vite/client", "vitest/globals", "node"]
  },

  "include": ["src/**/*", "src/types/shims-shared.d.ts"],

  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/__tests__/**"
  ]
}

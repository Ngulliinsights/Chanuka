{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    // Language and Environment
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",

    // Module Resolution
    "module": "ES2022",
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,

    // Type Checking - Full strict mode enabled
    "strict": true,
    "exactOptionalPropertyTypes": false, // Disabled temporarily - causing hundreds of errors with | undefined
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitOverride": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitThis": true,
    "skipLibCheck": true,
    "allowJs": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    // Emit
    "noEmit": true,
    "declaration": false,
    "isolatedModules": true,
    "composite": false,

    // Interop Constraints
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,

    // Path Mappings - Client-specific aliases only
    // ========================================================
    // RULE: All client-side paths use @/ or @core, @lib (local)
    //       All workspace-level paths use @workspace prefix
    //       This prevents ambiguity between workspace /shared and client @lib
    // ========================================================
    "paths": {
      // ===== CLIENT FRAMEWORK =====
      "@client": ["./src"],
      "@client/*": ["./src/*"],
      "@client/@types": ["./@types"],
      "@client/@types/*": ["./@types/*"],
      "@client/test-utils": ["./test-utils"],
      "@client/test-utils/*": ["./test-utils/*"],
      
      // ===== CLIENT-SIDE MODULES (all in ./src) =====
      "@core": ["./src/infrastructure"],
      
      // ===== SHARED MODULES (root-level shared/) =====
      "@shared": ["../shared"],
      "@shared/*": ["../shared/*"],
      "@shared/types": ["../shared/types"],
      "@shared/types/*": ["../shared/types/*"],
      "@shared/validation": ["../shared/validation"],
      "@shared/validation/*": ["../shared/validation/*"],
      "@shared/constants": ["../shared/constants"],
      "@shared/constants/*": ["../shared/constants/*"],
      "@shared/utils": ["../shared/utils"],
      "@shared/utils/*": ["../shared/utils/*"],
      "@shared/core": ["../shared/core"],
      "@shared/core/*": ["../shared/core/*"],
      "@shared/platform": ["../shared/platform"],
      "@shared/i18n": ["../shared/i18n"],
      "@workspace": ["../shared"],
      "@workspace/*": ["../shared/*"],
      "@workspace/types": ["../shared/types"],
      "@workspace/types/*": ["../shared/types/*"],
      "@workspace/core": ["../shared/core"],
      "@workspace/core/*": ["../shared/core/*"],
      "@workspace/validation": ["../shared/validation"],
      "@workspace/validation/*": ["../shared/validation/*"],
      "@workspace/constants": ["../shared/constants"],
      "@workspace/constants/*": ["../shared/constants/*"],
      "@core/*": ["./src/infrastructure/*"],
      "@lib": ["./src/lib"],
      "@lib/*": ["./src/lib/*"],
      "@lib/types": ["./src/lib/types"],
      "@lib/types/*": ["./src/lib/types/*"],
      "@lib/services": ["./src/lib/services"],
      "@lib/services/*": ["./src/lib/services/*"],
      "@lib/ui": ["./src/lib/ui"],
      "@lib/ui/*": ["./src/lib/ui/*"],
      "@lib/hooks": ["./src/lib/hooks"],
      "@lib/hooks/*": ["./src/lib/hooks/*"],
      "@lib/utils": ["./src/lib/utils"],
      "@lib/utils/*": ["./src/lib/utils/*"],
      "@lib/context": ["./src/lib/context"],
      "@lib/context/*": ["./src/lib/context/*"],
      "@lib/components": ["./src/lib/components"],
      "@lib/components/*": ["./src/lib/components/*"],
      "@lib/design-system": ["./src/lib/design-system"],
      "@lib/design-system/*": ["./src/lib/design-system/*"],
      
      // ===== APP/FEATURE MODULES (all in ./src) =====
      "@features": ["./src/features"],
      "@features/*": ["./src/features/*"],
      "@app": ["./src/app"],
      "@app/*": ["./src/app/*"],
      
      // ===== LIBRARY SHORTCUTS =====
      "@hooks": ["./src/lib/hooks"],
      "@hooks/*": ["./src/lib/hooks/*"],
      "@utils": ["./src/lib/utils"],
      "@utils/*": ["./src/lib/utils/*"],
      

      
      // ===== STUBS FOR SERVER-ONLY MODULES =====
      "@server-stub/database": ["./src/stubs/database-stub.ts"],
      "@server-stub/middleware": ["./src/stubs/middleware-stub.ts"],
      
      // ===== SECURITY MODULES =====
      "@secure": ["./src/lib/utils/secure"],
      "@secure/*": ["./src/lib/utils/secure/*"],
      
      // ===== LOGGING (UNIFIED) =====
      "@logger": ["./src/lib/utils/logger"],
      "@logger/*": ["./src/lib/utils/logger/*"]
    },

    // Type Definitions
    "types": ["vite/client", "node"],
    "typeRoots": ["./node_modules/@types", "../@types"]
  },

  "include": ["src/**/*", "../@types/**/*", "src/__tests__/integration/react-initialization.test.tsx", "vite.config.ts", "vite.production.config.ts"],

  "exclude": [
    "node_modules",
    "dist",
    "src/.cleanup-backup/**/*",
    "src/.design-system-backup/**/*",
    "src/utils/archive/**/*",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "src/__tests__/**/*.test.ts",
    "src/__tests__/**/*.test.tsx",
    "src/__tests__/**/*.spec.ts",
    "src/__tests__/**/*.spec.tsx"
  ]
}

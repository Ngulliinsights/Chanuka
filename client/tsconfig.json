{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    // Language and Environment
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",

    // Module Resolution
    "module": "ES2022",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,

    // Type Checking - Progressive strict mode for Chanuka UI upgrade
    "strict": true,
    "exactOptionalPropertyTypes": false,
    "noImplicitAny": true,
    "noImplicitReturns": false,
    "noImplicitOverride": false,
    "noUncheckedIndexedAccess": false,
    "noImplicitThis": true,
    "skipLibCheck": true,
    "allowJs": true,

    // Emit
    "noEmit": true,
    "declaration": false,
    "isolatedModules": true,
    "composite": false,

    // Interop Constraints
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,

    // Project Structure
    "baseUrl": ".",
    // Silence TypeScript 7.0 deprecation warnings for `baseUrl` until migration
    "ignoreDeprecations": "5.0",

    // Path Mappings
    "paths": {
      "@/*": ["src/*"],
      "@client": ["src"],
      "@client/*": ["src/*"],
      "@shared": ["../shared"],
      "@shared/*": ["../shared/*"],
      "@shared/core": ["../shared/core"],
      "@shared/core/*": ["../shared/core/*"],
      "@shared/database": ["../shared/database"],
      "@shared/database/*": ["../shared/database/*"],
      "@shared/schema": ["../shared/schema"],
      "@shared/schema/*": ["../shared/schema/*"],
      "@shared/utils": ["../shared/utils"],
      "@shared/utils/*": ["../shared/utils/*"],
      "@server": ["../server"],
      "@server/*": ["../server/*"],
      "@tests": ["../tests"],
      "@tests/*": ["../tests/*"]
    },

    // Type Definitions
    "types": ["vite/client", "vitest/globals", "node"]
  },

  "include": ["src/**/*", "src/types/shims-shared.d.ts"],

  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/__tests__/**"
  ]
}

{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": ".",
    "composite": true,
    "ignoreDeprecations": "5.0",
    "esModuleInterop": true,
    "downlevelIteration": true,
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "@server": ["."],
      "@server/*": ["./*"],
      "@shared": ["../shared"],
      "@shared/*": ["../shared/*"]
    }
  },
  "references": [
    { "path": "../shared" }
  ],
  "include": [
    "**/*.ts",
    "**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}


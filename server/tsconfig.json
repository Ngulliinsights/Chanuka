{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": ".",
    "composite": true,
    "paths": {
      "@/*": ["./*"],
      "@server/*": ["./*"],
      "@chanuka/shared": ["../shared"],
      "@chanuka/shared/*": ["../shared/*"],
      "@shared": ["../shared"],
      "@shared/*": ["../shared/*"]
    }
  },
  "references": [
    { "path": "../shared" }
  ],
  "include": [
    "**/*.ts",
    "**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts",
    "../shared/**/*"
  ]
}

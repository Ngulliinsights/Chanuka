{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "../",
    "composite": true,
    "ignoreDeprecations": "5.0",
    "paths": {
      "@/*": ["./*"],
      "@server": ["."],
      "@server/*": ["./*"],
      "@client": ["../client/src"],
      "@client/*": ["../client/src/*"],
      "@tests": ["../tests"],
      "@tests/*": ["../tests/*"],

      "@shared/*": ["../shared/*"]
    }
  },
  "references": [
    { "path": "../shared" }
  ],
  "include": [
    "**/*.ts",
    "**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}


{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "../",
    "composite": true,
    "ignoreDeprecations": "6.0",
    "paths": {
      "@/*": ["./*"],
      "@server": ["."],
      "@server/*": ["./*"],
      "@shared": ["../shared"],
      "@shared/*": ["../shared/*"],
      "@shared/core": ["../shared/core/src"],
      "@shared/core/*": ["../shared/core/src/*"],
      "@shared/database": ["../shared/database"],
      "@shared/database/*": ["../shared/database/*"],
      "@shared/schema": ["../shared/schema"],
      "@shared/schema/*": ["../shared/schema/*"],
      "@shared/utils": ["../shared/utils"],
      "@shared/utils/*": ["../shared/utils/*"],
      "@client": ["../client/src"],
      "@client/*": ["../client/src/*"],
      "@tests": ["../tests"],
      "@tests/*": ["../tests/*"]
    }
  },
  "references": [
    { "path": "../shared" }
  ],
  "include": [
    "**/*.ts",
    "**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}


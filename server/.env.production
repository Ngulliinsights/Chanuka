# Production Environment Configuration for Backend Server
NODE_ENV=production
PORT=5000

# Database Configuration
DATABASE_URL=${DATABASE_URL}
DB_HOST=${DB_HOST}
DB_PORT=5432
DB_NAME=chanuka
DB_USER=${DB_USER}
DB_PASSWORD=${DB_PASSWORD}
DB_SSL=true
DB_MAX_CONNECTIONS=50
DB_MIN_CONNECTIONS=5
DB_CONNECTION_TIMEOUT=20000
DB_IDLE_TIMEOUT=60000
DB_QUERY_TIMEOUT=120000

# Authentication Secrets (MUST be set in production environment)
JWT_SECRET=${JWT_SECRET}
SESSION_SECRET=${SESSION_SECRET}
JWT_EXPIRES_IN=12h
SESSION_MAX_AGE=43200000
REFRESH_TOKEN_EXPIRES_IN=30d
BCRYPT_ROUNDS=14
ENABLE_PASSWORD_RESET=true
PASSWORD_RESET_TOKEN_EXPIRES_IN=30m

# Redis Configuration
REDIS_URL=${REDIS_URL}
REDIS_HOST=${REDIS_HOST}
REDIS_PORT=6379
REDIS_PASSWORD=${REDIS_PASSWORD}
REDIS_DB=0
REDIS_KEY_PREFIX=chanuka:
REDIS_TTL=7200
REDIS_CLUSTERING=false

# Email Configuration
SMTP_HOST=${SMTP_HOST}
SMTP_PORT=587
SMTP_USER=${SMTP_USER}
SMTP_PASS=${SMTP_PASS}
SMTP_SECURE=true
FROM_EMAIL=${FROM_EMAIL}
FROM_NAME=Chanuka Platform
ENABLE_EMAIL_VERIFICATION=true
ENABLE_EMAIL_NOTIFICATIONS=true

# External API Keys
OPENAI_API_KEY=${OPENAI_API_KEY}
ANTHROPIC_API_KEY=${ANTHROPIC_API_KEY}
CONGRESS_API_KEY=${CONGRESS_API_KEY}

# Feature Flags
ENABLE_AI_ANALYSIS=true
ENABLE_EXPERT_VERIFICATION=true
ENABLE_CONFLICT_DETECTION=true
ENABLE_REAL_TIME_UPDATES=true
ENABLE_SEARCH_INDEXING=true
ENABLE_CACHING=true
ENABLE_MONITORING=true
ENABLE_SECURITY_AUDITING=true
ENABLE_PRIVACY_SCHEDULER=true
ENABLE_NOTIFICATION_SCHEDULER=true

# CORS Configuration
ALLOWED_ORIGINS=${ALLOWED_ORIGINS}
CORS_CREDENTIALS=true
CORS_MAX_AGE=86400

# Logging
LOG_LEVEL=warn
LOG_CONSOLE=true
LOG_FILE=true
LOG_DIRECTORY=./logs
LOG_MAX_FILE_SIZE=50m
LOG_MAX_FILES=30d
LOG_STRUCTURED=true

# Security (Strict for production)
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTP_ONLY=true
SESSION_COOKIE_SAME_SITE=strict
ENABLE_HELMET=true
ENABLE_CSRF=true
ENABLE_RATE_LIMITING=true
ENABLE_SECURITY_MONITORING=true
ENABLE_INTRUSION_DETECTION=true

# Monitoring
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_ERROR_TRACKING=true
ENABLE_AUDIT_LOGGING=true
ENABLE_HEALTH_CHECKS=true
HEALTH_CHECK_INTERVAL=15000
METRICS_RETENTION_DAYS=90
ALERT_RESPONSE_TIME_MS=3000
ALERT_ERROR_RATE_PERCENT=2
ALERT_MEMORY_USAGE_PERCENT=75

# WebSocket
ENABLE_WEBSOCKET=true
WEBSOCKET_HEARTBEAT_INTERVAL=15000
WEBSOCKET_MAX_CONNECTIONS=5000
WEBSOCKET_AUTHENTICATION=true
WEBSOCKET_RATE_LIMITING=true

# Notifications
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=false
NOTIFICATION_MAX_RETRIES=5
NOTIFICATION_RETRY_DELAY_MS=10000
NOTIFICATION_BATCH_SIZE=100

# Privacy
ENABLE_DATA_RETENTION=true
DATA_RETENTION_DAYS=2555
ENABLE_ANONYMIZATION=true
ENABLE_AUDIT_TRAIL=true
GDPR_COMPLIANCE=true
COOKIE_CONSENT_REQUIRED=true

# Search
ENABLE_FULL_TEXT_SEARCH=true
ENABLE_FUZZY_SEARCH=true
SEARCH_MAX_RESULTS=500
SEARCH_TIMEOUT_MS=10000
SEARCH_INDEX_UPDATE_INTERVAL=180000

# Analytics
ENABLE_USER_ANALYTICS=true
ENABLE_BILL_ANALYTICS=true
ENABLE_SPONSOR_ANALYTICS=true
ENABLE_CONFLICT_DETECTION=true
ENABLE_TRANSPARENCY_METRICS=true
ANALYTICS_RETENTION_DAYS=730

# Government Data
ENABLE_CONGRESS_API=true
ENABLE_REGULATORY_MONITORING=true
ENABLE_BILL_TRACKING=true
GOVERNMENT_DATA_UPDATE_INTERVAL=30
GOVERNMENT_DATA_MAX_CONCURRENT=20
GOVERNMENT_DATA_CACHE_TTL=30
GOVERNMENT_DATA_TIMEOUT=45000
GOVERNMENT_DATA_MAX_RETRIES=5
GOVERNMENT_DATA_RATE_LIMIT=500

# Coverage
ENABLE_COVERAGE_ANALYSIS=true
ENABLE_GAP_DETECTION=true
ENABLE_COVERAGE_REPORTING=true
COVERAGE_ANALYSIS_INTERVAL=12
COVERAGE_REPORT_RETENTION=180

# Admin
ENABLE_ADMIN_PANEL=true
ENABLE_SYSTEM_MONITORING=true
ENABLE_USER_MANAGEMENT=true
ENABLE_CONTENT_MODERATION=true
ENABLE_EXTERNAL_API_MANAGEMENT=true
ADMIN_MAX_LOGIN_ATTEMPTS=3
ADMIN_LOCKOUT_DURATION=30

# Cache
CACHE_DEFAULT_TTL=7200
CACHE_MAX_MEMORY=500mb
CACHE_COMPRESSION=true
CACHE_SERIALIZATION=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=600000
RATE_LIMIT_MAX_REQUESTS=200

# Server Configuration
HOST=0.0.0.0
FRONTEND_URL=${FRONTEND_URL}
ENABLE_HTTPS=true
SSL_KEY_PATH=/etc/ssl/private/server.key
SSL_CERT_PATH=/etc/ssl/certs/server.crt
# Development Environment Configuration for Backend Server
NODE_ENV=development
PORT=3000

# Database Configuration
DATABASE_URL=postgresql://postgres:devpassword@localhost:5432/chanuka
DB_HOST=localhost
DB_PORT=5432
DB_NAME=chanuka
DB_USER=postgres
DB_PASSWORD=devpassword
DB_SSL=false
DB_MAX_CONNECTIONS=20
DB_MIN_CONNECTIONS=2
DB_CONNECTION_TIMEOUT=10000
DB_IDLE_TIMEOUT=30000
DB_QUERY_TIMEOUT=60000

# Authentication Secrets
JWT_SECRET=development-jwt-secret-change-in-production-please-change-in-production-2025-32charsminimum
SESSION_SECRET=development-session-secret-change-in-production-please-change-2025-32charsminimum
JWT_EXPIRES_IN=24h
SESSION_MAX_AGE=86400000
REFRESH_TOKEN_EXPIRES_IN=7d
BCRYPT_ROUNDS=12
ENABLE_PASSWORD_RESET=true
PASSWORD_RESET_TOKEN_EXPIRES_IN=1h

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=chanuka:
REDIS_TTL=3600
REDIS_CLUSTERING=false

# Email Configuration (Development - using console logging)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_SECURE=false
FROM_EMAIL=noreply@chanuka.app
FROM_NAME=Chanuka Platform
ENABLE_EMAIL_VERIFICATION=false
ENABLE_EMAIL_NOTIFICATIONS=false

# External API Keys (Optional for development)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
CONGRESS_API_KEY=

# Feature Flags
ENABLE_AI_ANALYSIS=false
ENABLE_EXPERT_VERIFICATION=false
ENABLE_CONFLICT_DETECTION=true
ENABLE_REAL_TIME_UPDATES=true
ENABLE_SEARCH_INDEXING=true
ENABLE_CACHING=true
ENABLE_MONITORING=true
ENABLE_SECURITY_AUDITING=true
ENABLE_PRIVACY_SCHEDULER=true
ENABLE_NOTIFICATION_SCHEDULER=true

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:5174,http://localhost:4200,http://127.0.0.1:3000,http://127.0.0.1:5173,http://127.0.0.1:5174,http://127.0.0.1:4200
CORS_CREDENTIALS=true
CORS_MAX_AGE=86400

# Logging
LOG_LEVEL=debug
LOG_CONSOLE=true
LOG_FILE=false
LOG_STRUCTURED=true

# Security (Relaxed for development)
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTP_ONLY=true
SESSION_COOKIE_SAME_SITE=lax
ENABLE_HELMET=true
ENABLE_CSRF=true
ENABLE_RATE_LIMITING=true
ENABLE_SECURITY_MONITORING=true
ENABLE_INTRUSION_DETECTION=true

# Monitoring
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_ERROR_TRACKING=true
ENABLE_AUDIT_LOGGING=true
ENABLE_HEALTH_CHECKS=true
HEALTH_CHECK_INTERVAL=30000

# WebSocket
ENABLE_WEBSOCKET=true
WEBSOCKET_HEARTBEAT_INTERVAL=30000
WEBSOCKET_MAX_CONNECTIONS=1000
WEBSOCKET_AUTHENTICATION=true
WEBSOCKET_RATE_LIMITING=true

# Notifications
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_SMS_NOTIFICATIONS=false

# Privacy
ENABLE_DATA_RETENTION=true
DATA_RETENTION_DAYS=2555
ENABLE_ANONYMIZATION=true
ENABLE_AUDIT_TRAIL=true
GDPR_COMPLIANCE=true
COOKIE_CONSENT_REQUIRED=true

# Search
ENABLE_FULL_TEXT_SEARCH=true
ENABLE_FUZZY_SEARCH=true
SEARCH_MAX_RESULTS=100
SEARCH_TIMEOUT_MS=5000
SEARCH_INDEX_UPDATE_INTERVAL=300000

# Analytics
ENABLE_USER_ANALYTICS=true
ENABLE_BILL_ANALYTICS=true
ENABLE_SPONSOR_ANALYTICS=true
ENABLE_CONFLICT_DETECTION=true
ENABLE_TRANSPARENCY_METRICS=true
ANALYTICS_RETENTION_DAYS=365

# Government Data
ENABLE_CONGRESS_API=true
ENABLE_REGULATORY_MONITORING=true
ENABLE_BILL_TRACKING=true
GOVERNMENT_DATA_UPDATE_INTERVAL=60
GOVERNMENT_DATA_MAX_CONCURRENT=10
GOVERNMENT_DATA_CACHE_TTL=15

# Coverage
ENABLE_COVERAGE_ANALYSIS=true
ENABLE_GAP_DETECTION=true
ENABLE_COVERAGE_REPORTING=true
COVERAGE_ANALYSIS_INTERVAL=24
COVERAGE_REPORT_RETENTION=90

# Admin
ENABLE_ADMIN_PANEL=true
ENABLE_SYSTEM_MONITORING=true
ENABLE_USER_MANAGEMENT=true
ENABLE_CONTENT_MODERATION=true
ENABLE_EXTERNAL_API_MANAGEMENT=true
ADMIN_MAX_LOGIN_ATTEMPTS=5
ADMIN_LOCKOUT_DURATION=15

# Cache
CACHE_DEFAULT_TTL=3600
CACHE_MAX_MEMORY=100mb
CACHE_COMPRESSION=true
CACHE_SERIALIZATION=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
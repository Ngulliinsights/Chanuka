{
  "extends": "./tsconfig.json",
  "compilerOptions": {
  // Relax some strictness temporarily to reduce noise during refactor
    "noEmit": true,
    "skipLibCheck": true,
  "strict": true,
    "esModuleInterop": true,
    "allowImportingTsExtensions": true,
    "downlevelIteration": true
  },
  "include": [
    "server/**/*.ts",
    "server/**/*.d.ts",
    "server/types/**/*",
    "shared/schema.ts",
    "shared/database/**/*",
    "db/**/*"
  ],
  "exclude": [
    "node_modules",
    "client",
    "build",
    "dist",
    "server/tests",
    "**/*.test.ts",
    "**/*.spec.ts",
    "shared/core/**",
    "shared/core/src/**"
  ]
}

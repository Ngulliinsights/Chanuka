{
  "name": "chanuka-platform",
  "version": "1.0.0",
  "description": "Legislative transparency and civic engagement platform",
  "type": "module",
  "license": "MIT",
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0",
    "python": ">=3.11.0"
  },
  "scripts": {
    "// --- TYPE CHECKING ---": "",
    "type-check": "nx run-many --target=type-check --all",
    "type-check:shared": "nx type-check shared",
    "type-check:client": "nx type-check client",
    "type-check:server": "nx type-check server",
    "// --- CORE LIFECYCLE ---": "",
    "prepare": "command -v husky >/dev/null 2>&1 && husky install || echo 'Husky not installed, skipping'",
    "dev": "nx run-many --target=serve --projects=client,server --parallel",
    "dev:server": "nx serve server",
    "dev:client": "nx serve client",
    "dev:safe": "npm run dev",
    "build": "nx run-many --target=build --projects=shared,client,server",
    "build:client": "nx build client && npm run performance:check-runtime:safe",
    "build:server": "nx build server",
    "build:shared": "nx build shared",
    "start": "ts-node --transpile-only --esm --project server/tsconfig.json server/index.ts",
    "preview": "vite preview",
    "// --- DATABASE OPERATIONS (CANONICAL SCRIPTS) ---": "",
    "db:init": "tsx --tsconfig scripts/tsconfig.json scripts/database/initialize-database-integration.ts",
    "db:migrate": "tsx --tsconfig scripts/tsconfig.json scripts/database/migrate.ts",
    "db:migrate:validate": "tsx --tsconfig scripts/tsconfig.json scripts/database/migrate.ts --validate",
    "db:migrate:dry-run": "tsx --tsconfig scripts/tsconfig.json scripts/database/migrate.ts --dry-run",
    "db:reset": "tsx --tsconfig scripts/tsconfig.json scripts/database/reset.ts",
    "db:reset:safe": "tsx --tsconfig scripts/tsconfig.json scripts/database/reset.ts --migrate --validate",
    "db:reset:force": "tsx --tsconfig scripts/tsconfig.json scripts/database/reset.ts --force --migrate --seed --validate",
    "db:health": "tsx --tsconfig scripts/tsconfig.json scripts/database/health-check.ts --detailed",
    "db:health:watch": "tsx --tsconfig scripts/tsconfig.json scripts/database/health-check.ts --detailed --watch",
    "db:generate": "tsx --tsconfig scripts/tsconfig.json scripts/database/generate-migration.ts",
    "db:generate-with-types": "tsx --tsconfig scripts/tsconfig.json scripts/database/generate-migration-with-types.ts",
    "db:generate-types": "tsx --tsconfig scripts/tsconfig.json scripts/database/generate-types-simple.ts && tsx --tsconfig scripts/tsconfig.json scripts/database/post-generate-transform.ts",
    "db:verify-schema-alignment": "tsx --tsconfig scripts/tsconfig.json scripts/database/verify-schema-type-alignment.ts",
    "db:align-enums": "tsx --tsconfig scripts/tsconfig.json scripts/database/align-enums.ts",
    "db:validate-migration": "tsx --tsconfig scripts/tsconfig.json scripts/database/validate-migration.ts",
    "db:verify-alignment": "tsx --tsconfig scripts/tsconfig.json scripts/database/verify-schema-type-alignment-v2.ts",
    "db:verify-all": "npm run db:validate-migration && npm run db:verify-alignment",
    "db:verify-migration": "tsx --tsconfig scripts/tsconfig.json scripts/database/migration-verification-framework.ts",
    "db:migrate-verified": "tsx --tsconfig scripts/tsconfig.json scripts/database/migrate-with-verification.ts",
    "db:rollback-verified": "tsx --tsconfig scripts/tsconfig.json scripts/database/rollback-with-verification.ts",
    "db:rollback-test": "tsx --tsconfig scripts/tsconfig.json scripts/database/rollback-with-verification.ts --test",
    "db:schema:check": "tsx --tsconfig scripts/tsconfig.json scripts/database/check-schema.ts",
    "db:schema:drift": "tsx --tsconfig scripts/tsconfig.json scripts/database/schema-drift-detection.ts",
    "db:studio": "drizzle-kit studio",
    "db:seed": "tsx --tsconfig scripts/tsconfig.json scripts/seeds/seed.ts",
    "db:seed:legislative": "tsx --tsconfig scripts/tsconfig.json scripts/seeds/legislative-seed.ts",
    "db:seed:comprehensive": "tsx --tsconfig scripts/tsconfig.json scripts/seeds/comprehensive-legislative-seed.ts",
    "db:seed:primary": "tsx --tsconfig scripts/tsconfig.json scripts/seeds/primary-seed-aligned.ts",
    "db:seed:secondary": "tsx --tsconfig scripts/tsconfig.json scripts/seeds/secondary-seed-aligned.ts",
    "db:seed:validate": "tsx --tsconfig scripts/tsconfig.json scripts/seeds/validate-seed-data.ts",
    "// --- FEATURE MIGRATIONS ---": "",
    "migrate:alert-preferences": "tsx --tsconfig scripts/tsconfig.json scripts/migrate-alert-preferences.ts",
    "migrate:alert-preferences:dry-run": "tsx --tsconfig scripts/tsconfig.json scripts/migrate-alert-preferences.ts --dry-run",
    "migrate:alert-preferences:verbose": "tsx --tsconfig scripts/tsconfig.json scripts/migrate-alert-preferences.ts --verbose",
    "cleanup:alert-preferences": "tsx --tsconfig scripts/tsconfig.json scripts/cleanup-alert-preferences.ts --force",
    "cleanup:alert-preferences:dry-run": "tsx --tsconfig scripts/tsconfig.json scripts/cleanup-alert-preferences.ts --dry-run",
    "// --- API CONTRACT VERIFICATION ---": "",
    "api:verify-contracts": "tsx --tsconfig scripts/tsconfig.json scripts/verify-api-contract-coverage.ts",
    "// --- GRAPH DATABASE (NEO4J) ---": "",
    "graph:init": "tsx --tsconfig scripts/tsconfig.json scripts/database/graph/initialize-graph.ts",
    "graph:sync": "tsx --tsconfig scripts/tsconfig.json scripts/database/graph/sync-demo.ts",
    "graph:start": "docker-compose -f docker-compose.neo4j.yml up -d neo4j",
    "graph:stop": "docker-compose -f docker-compose.neo4j.yml down",
    "graph:logs": "docker-compose -f docker-compose.neo4j.yml logs -f neo4j",
    "graph:shell": "docker exec -it chanuka-neo4j cypher-shell",
    "graph:test": "npm run graph:init && npm run graph:sync",
    "graph:discover-patterns": "tsx --tsconfig scripts/tsconfig.json scripts/database/graph/discover-patterns.ts",
    "graph:analyze-influence": "tsx --tsconfig scripts/tsconfig.json scripts/database/graph/analyze-influence.ts",
    "graph:sync-advanced": "tsx --tsconfig scripts/tsconfig.json scripts/database/graph/sync-advanced-relationships.ts",
    "graph:discover-networks": "tsx --tsconfig scripts/tsconfig.json scripts/database/graph/discover-networks.ts",
    "graph:sync-networks": "tsx --tsconfig scripts/tsconfig.json scripts/database/graph/sync-networks.ts",
    "graph:phase3:demo": "npm run graph:discover-networks",
    "// --- DEPRECATED (Use canonical scripts above instead) ---": "",
    "db:setup": "echo '⚠️ DEPRECATED: Use db:init instead' && npm run db:init",
    "migrate:status": "echo '⚠️ DEPRECATED: Use db:health instead' && npm run db:health",
    "// --- TYPE SAFETY SCANNING ---": "",
    "scan:type-violations": "tsx --tsconfig scripts/tsconfig.json scripts/scan-type-violations.ts",
    "scan:client-types": "tsx --tsconfig scripts/tsconfig.json scripts/scan-client-type-violations.ts",
    "scan:todos": "tsx --tsconfig scripts/tsconfig.json scripts/scan-todos.ts",
    "scan:eslint-suppressions": "tsx --tsconfig scripts/tsconfig.json scripts/scan-eslint-suppressions.ts",
    "track:progress": "tsx --tsconfig scripts/tsconfig.json scripts/track-progress.ts",
    "verify:metrics": "tsx --tsconfig scripts/tsconfig.json scripts/verify-metrics.ts",
    "fix:eslint-suppressions": "tsx --tsconfig scripts/tsconfig.json scripts/fix-eslint-suppressions.ts",
    "fix:enum-conversions": "tsx --tsconfig scripts/tsconfig.json scripts/fix-templates.ts --template=enum-conversions",
    "fix:enum-conversions:dry-run": "tsx --tsconfig scripts/tsconfig.json scripts/fix-templates.ts --template=enum-conversions --dry-run",
    "fix:api-responses": "tsx --tsconfig scripts/tsconfig.json scripts/fix-templates.ts --template=api-responses",
    "fix:api-responses:dry-run": "tsx --tsconfig scripts/tsconfig.json scripts/fix-templates.ts --template=api-responses --dry-run",
    "fix:database-operations": "tsx --tsconfig scripts/tsconfig.json scripts/fix-templates.ts --template=database-operations",
    "fix:database-operations:dry-run": "tsx --tsconfig scripts/tsconfig.json scripts/fix-templates.ts --template=database-operations --dry-run",
    "fix:dynamic-properties": "tsx --tsconfig scripts/tsconfig.json scripts/fix-templates.ts --template=dynamic-properties",
    "fix:dynamic-properties:dry-run": "tsx --tsconfig scripts/tsconfig.json scripts/fix-templates.ts --template=dynamic-properties --dry-run",
    "fix:type-assertions": "tsx --tsconfig scripts/tsconfig.json scripts/fix-templates.ts --template=type-assertions",
    "fix:type-assertions:dry-run": "tsx --tsconfig scripts/tsconfig.json scripts/fix-templates.ts --template=type-assertions --dry-run",
    "// --- ACCESSIBILITY ---": "",
    "accessibility:audit": "node scripts/accessibility-audit.js",
    "accessibility:audit:dev": "start-server-and-test dev http://localhost:5173 accessibility:audit",
    "// --- QUALITY GATES ---": "",
    "quality:check": "node check-thresholds.js",
    "quality:check:dev": "node check-thresholds.js --config quality-config-dev.json",
    "quality:check:staging": "node check-thresholds.js --config quality-config-staging.json",
    "quality:check:pr": "node check-thresholds.js --config quality-config-pr.json",
    "quality:check:prod": "node check-thresholds.js --config quality-config-production.json",
    "quality:baseline": "cp combined_analysis.json quality-baseline.json",
    "quality:baseline:staging": "cp combined_analysis.json quality-baseline-staging.json",
    "quality:baseline:prod": "cp combined_analysis.json quality-baseline-prod.json",
    "// --- MODERN PROJECT ANALYSIS (TOOL ORCHESTRATION) ---": "",
    "analyze:modern": "tsx --tsconfig scripts/tsconfig.json scripts/modern-project-analyzer.ts",
    "analyze:infrastructure": "tsx --tsconfig scripts/tsconfig.json scripts/analyze-infrastructure.ts",
    "analyze:infrastructure:circular": "madge --circular --extensions ts,tsx client/src/infrastructure",
    "analyze:infrastructure:graph": "madge --image analysis-results/infrastructure-graph.svg --extensions ts,tsx client/src/infrastructure",
    "analyze:infrastructure:deps": "dependency-cruiser --config .dependency-cruiser.cjs --output-type dot client/src/infrastructure | dot -T svg > analysis-results/infrastructure-deps.svg",
    "validate:infrastructure": "tsx --tsconfig scripts/tsconfig.json scripts/validate-infrastructure.ts",
    "validate:boundaries": "dependency-cruiser --config .dependency-cruiser.cjs --output-type err client/src server shared",
    "validate:boundaries:infrastructure": "dependency-cruiser --config .dependency-cruiser.cjs --output-type err client/src/infrastructure",
    "validate:boundaries:json": "dependency-cruiser --config .dependency-cruiser.cjs --output-type json client/src server shared",
    "validate:layers": "dependency-cruiser --config .dependency-cruiser.cjs --output-type err --focus '^client/src/infrastructure/' client/src/infrastructure",
    "validate:layers:report": "dependency-cruiser --config .dependency-cruiser.cjs --output-type err-long --focus '^client/src/infrastructure/' client/src/infrastructure",
    "analyze:circular": "madge --circular --extensions ts,tsx --exclude 'dist|node_modules|.nx|server/infrastructure/schema' client/src server shared",
    "analyze:circular:check": "npm run analyze:circular && echo '✅ No circular dependencies found (excluding intentional schema patterns)!'",
    "analyze:duplication": "jscpd . --config .jscpd.json || true",
    "analyze:dead": "knip || true",
    "analyze:imports": "dependency-cruiser --config .dependency-cruiser.cjs --include-only '^(client|server|shared)' .",
    "analyze:architecture": "tsx --tsconfig scripts/tsconfig.json scripts/modern-project-analyzer.ts",
    "analyze:bundle": "webpack-bundle-analyzer dist/public/assets/*.js",
    "// --- TESTING ---": "",
    "test": "nx run-many --target=test --all",
    "test:integration": "vitest run --config tests/integration/vitest.config.ts",
    "test:integration:watch": "vitest --config tests/integration/vitest.config.ts",
    "test:integration:coverage": "vitest run --coverage --config tests/integration/vitest.config.ts",
    "test:nx:client": "nx test client",
    "test:nx:server": "nx test server",
    "test:backend": "vitest --config vitest.backend.config.js",
    "test:frontend": "vitest run --config vitest.frontend.config.ts",
    "test:e2e": "playwright test",
    "test:performance": "playwright test tests/performance",
    "test:strategic": "node scripts/run-strategic-tests.cjs",
    "// --- LINTING & FIXING ---": "",
    "lint": "nx run-many --target=lint --all",
    "lint:css": "stylelint \"client/src/**/*.css\"",
    "format": "prettier --write .",
    "fix": "npm run format && npm run lint -- --fix",
    "// --- REPORTING ---": "",
    "report:quality": "npm run analyze:modern && cat analysis-results/unified-report.md",
    "// --- DOCUMENTATION ---": "",
    "docs:generate": "typedoc",
    "docs:serve": "npx http-server docs/api -p 8080 -o",
    "docs:watch": "typedoc --watch",
    "docs:validate": "tsx --tsconfig client/tsconfig.json client/src/infrastructure/scripts/validate-api-documentation.ts",
    "// --- CI/CD HOOKS ---": "",
    "precommit": "npm run analyze:modern && npm run quality:check:dev && npm run validate:layers",
    "prepush": "npm run analyze:modern && npm run quality:check:staging && npm run validate:boundaries",
    "ci:quality": "npm run analyze:modern && npm run quality:check:prod",
    "// --- DEPLOYMENT ---": "",
    "deploy:production": "node scripts/deploy-production.js --environment production",
    "deploy:staging": "node scripts/deploy-production.js --environment staging",
    "// --- CLEANUP ---": "",
    "clean:reports": "rm -f pattern_errors.json codebase_errors.json combined_analysis.json quality-gate-report*.json",
    "clean:baselines": "rm -f quality-baseline*.json",
    "cleanup:memory": "node --expose-gc scripts/immediate-memory-cleanup.cjs",
    "clean:all": "npm run clean:reports && npm run clean:baselines"
  },

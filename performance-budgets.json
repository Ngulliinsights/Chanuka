{
  "version": "1.0.0",
  "description": "Performance budgets for Chanuka Platform frontend application",
  "environment": "production",
  "budgets": {
    "bundle": {
      "totalSize": {
        "limit": 2097152,
        "unit": "bytes",
        "description": "Total bundle size limit (2MB)"
      },
      "gzippedSize": {
        "limit": 524288,
        "unit": "bytes",
        "description": "Gzipped bundle size limit (512KB)"
      },
      "initialChunkSize": {
        "limit": 1048576,
        "unit": "bytes",
        "description": "Initial chunk size limit (1MB)"
      },
      "largestChunkSize": {
        "limit": 524288,
        "unit": "bytes",
        "description": "Largest chunk size limit (512KB)"
      }
    },
    "coreWebVitals": {
      "lcp": {
        "limit": 2500,
        "unit": "ms",
        "description": "Largest Contentful Paint should be < 2.5s"
      },
      "fid": {
        "limit": 100,
        "unit": "ms",
        "description": "First Input Delay should be < 100ms"
      },
      "cls": {
        "limit": 0.1,
        "unit": "score",
        "description": "Cumulative Layout Shift should be < 0.1"
      },
      "fcp": {
        "limit": 1800,
        "unit": "ms",
        "description": "First Contentful Paint should be < 1.8s"
      },
      "ttfb": {
        "limit": 800,
        "unit": "ms",
        "description": "Time to First Byte should be < 800ms"
      }
    },
    "performance": {
      "healthScore": {
        "limit": 75,
        "unit": "score",
        "description": "Overall performance health score minimum"
      },
      "efficiencyScore": {
        "limit": 80,
        "unit": "score",
        "description": "Bundle efficiency score minimum"
      }
    }
  },
  "thresholds": {
    "warning": 0.9,
    "error": 1.0
  },
  "monitoring": {
    "enabled": true,
    "alerts": {
      "slack": false,
      "email": false,
      "github": true
    },
    "reporting": {
      "frequency": "daily",
      "includeTrends": true,
      "includeRecommendations": true
    }
  },
  "environments": {
    "development": {
      "strictMode": false,
      "failOnViolation": false
    },
    "staging": {
      "strictMode": true,
      "failOnViolation": true,
      "warningThreshold": 0.95
    },
    "production": {
      "strictMode": true,
      "failOnViolation": true,
      "warningThreshold": 0.9
    }
  }
}
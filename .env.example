# Database Configuration
DATABASE_URL="postgresql://username:password@host:port/database?sslmode=require"
TEST_DATABASE_URL="postgresql://username:password@host:port/test_database?sslmode=require"

# Application Configuration
NODE_ENV=development
PORT=3000

# Security (CHANGE THESE IN PRODUCTION!)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# API Configuration
API_BASE_URL=http://localhost:3000/api

# Logging
LOG_LEVEL=info

# Cache Configuration
REDIS_URL=redis://localhost:6379
CACHE_PROVIDER=memory

# Rate Limiting
RATE_LIMIT_PROVIDER=memory

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_REAL_TIME=true
ENABLE_NOTIFICATIONS=true

# External Services
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your-email@example.com
# SMTP_PASS=your-email-password

# Development
DEBUG_TESTS=false
VITE_DEBUG=false

# Client-side Environment Variables (VITE_* prefix for client access)
VITE_API_BASE_URL=http://localhost:3000/api
VITE_NODE_ENV=development
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_REAL_TIME=true
VITE_ENABLE_NOTIFICATIONS=true

# Analytics & Monitoring (Replace with actual values)
VITE_SENTRY_DSN=your-sentry-dsn-here
VITE_GOOGLE_ANALYTICS_ID=your-ga-id-here
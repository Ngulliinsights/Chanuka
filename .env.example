
# Database Configuration
DATABASE_URL=postgresql://username:password@hostname:5432/database_name
DB_HOST=localhost
DB_PORT=5432
DB_NAME=chanuka
DB_USER=postgres
DB_PASSWORD=your_password_here

# Neon Database (if using Neon)
NEON_DATABASE_URL=postgresql://neondb_owner:password@host/database?sslmode=require

# Application Configuration
NODE_ENV=development
PORT=5000

# API Keys (use Secrets tool in Replit)
OPENAI_API_KEY=your_openai_key_here
ANTHROPIC_API_KEY=your_anthropic_key_here

# Session Configuration
SESSION_SECRET=your_session_secret_here

# Security Configuration
JWT_SECRET=your_jwt_secret_here_64_chars_minimum
REFRESH_TOKEN_SECRET=your_refresh_token_secret_here_64_chars_minimum
ENCRYPTION_KEY=your_64_character_hex_encryption_key_here
KEY_DERIVATION_SALT=your_64_character_hex_salt_here

# TLS Configuration (for production)
TLS_CERT_PATH=/etc/ssl/certs/server.crt
TLS_KEY_PATH=/etc/ssl/private/server.key
TLS_CA_PATH=/etc/ssl/certs/ca.crt

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:4200

# Feature Flags
ENABLE_AI_ANALYSIS=true
ENABLE_EXPERT_VERIFICATION=true
ENABLE_CONFLICT_DETECTION=true

# Government Data Integration
PARLIAMENT_CA_API_URL=https://www.ourcommons.ca/members/en/search/xml
PARLIAMENT_CA_API_KEY=your_parliament_api_key_here
ONTARIO_LEGISLATURE_API_URL=https://www.ola.org/en/legislative-business/bills
ONTARIO_LEGISLATURE_API_KEY=your_ontario_api_key_here
OPENPARLIAMENT_API_URL=https://openparliament.ca/api
OPENPARLIAMENT_API_KEY=your_openparliament_api_key_here

# External API Configuration
EXTERNAL_API_TIMEOUT=30000
EXTERNAL_API_RETRY_ATTEMPTS=3
EXTERNAL_API_RATE_LIMIT_PER_MINUTE=60
EXTERNAL_API_CACHE_TTL=3600000

# Logging
LOG_LEVEL=info

# Analytics Configuration
# Cache TTL values (in seconds)
ANALYTICS_CACHE_USER_ENGAGEMENT_TTL=1800
ANALYTICS_CACHE_BILL_ENGAGEMENT_TTL=900
ANALYTICS_CACHE_TRENDS_TTL=3600
ANALYTICS_CACHE_LEADERBOARD_TTL=1800
ANALYTICS_CACHE_ML_ANALYSIS_TTL=7200
ANALYTICS_CACHE_FINANCIAL_DISCLOSURE_TTL=3600
ANALYTICS_CACHE_MAX_SIZE=1000

# Database configuration
ANALYTICS_DB_QUERY_TIMEOUT=10000
ANALYTICS_DB_POOL_SIZE=5
ANALYTICS_DB_IDLE_TIMEOUT=30000
ANALYTICS_DB_MAX_RETRIES=2

# Feature flags
ANALYTICS_ENABLE_ML_ANALYSIS=false
ANALYTICS_ENABLE_REAL_TIME_UPDATES=true
ANALYTICS_ENABLE_ADVANCED_CACHING=true
ANALYTICS_ENABLE_PERFORMANCE_MONITORING=true
ANALYTICS_ENABLE_ERROR_TRACKING=true

# Performance thresholds
ANALYTICS_SLOW_REQUEST_THRESHOLD=2000
ANALYTICS_MAX_CONCURRENT_OPERATIONS=10
ANALYTICS_MEMORY_WARNING_THRESHOLD=200
ANALYTICS_CPU_WARNING_THRESHOLD=80

# Logging configuration
ANALYTICS_LOG_LEVEL=info
ANALYTICS_ENABLE_STRUCTURED_LOGGING=true
ANALYTICS_ENABLE_PERFORMANCE_LOGGING=true
ANALYTICS_LOG_MAX_RETENTION_DAYS=30

# Analytics settings
ANALYTICS_DEFAULT_TIMEFRAME=30d
ANALYTICS_MAX_RESULTS_PER_PAGE=100
ANALYTICS_ENABLE_DATA_EXPORT=true
ANALYTICS_ENABLE_ADVANCED_VISUALIZATIONS=false

{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": ".",
  "baseUrl": ".",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
  // Suppress baseUrl deprecation warnings until migration to TS7 is planned.
  // Use "6.0" per TypeScript guidance to silence messages related to baseUrl.
  "ignoreDeprecations": "6.0",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
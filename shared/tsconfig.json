{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": ".",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "paths": {
      "@/*": ["./*"],
      "@shared": ["."],
      "@shared/*": ["./*"],
      "@shared/core": ["./core"],
      "@shared/core/*": ["./core/*"],
      "@shared/types": ["./types"],
      "@shared/types/*": ["./types/*"],
      "@shared/validation": ["./validation"],
      "@shared/validation/*": ["./validation/*"],
      "@shared/constants": ["./constants"],
      "@shared/constants/*": ["./constants/*"],
      "@shared/utils": ["./utils"],
      "@shared/utils/*": ["./utils/*"]
    }
  },
  "include": ["**/*.ts", "**/*.d.ts"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts"]
}

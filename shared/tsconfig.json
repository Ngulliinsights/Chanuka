{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": ".",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "paths": {
      "@shared": ["."],
      "@shared/*": ["./*"]
    }
  },
  "include": ["**/*.ts", "**/*.d.ts", "../server/infrastructure/validation/middleware.ts"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts"]
}

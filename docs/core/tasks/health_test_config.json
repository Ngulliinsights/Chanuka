{
  "name": "health-system-tests",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration",
    "test:unit": "jest --testPathPattern=unit",
    "test:load": "jest --testPathPattern=load --maxWorkers=1",
    "test:chaos": "jest --testPathPattern=chaos --maxWorkers=1",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": ["<rootDir>/core/src"],
    "testMatch": [
      "**/__tests__/**/*.test.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "collectCoverageFrom": [
      "core/src/health/**/*.ts",
      "!core/src/health/**/*.test.ts",
      "!core/src/health/__tests__/**/*"
    ],
    "coverageReporters": ["text", "lcov", "html"],
    "coverageThreshold": {
      "global": {
        "branches": 85,
        "functions": 90,
        "lines": 90,
        "statements": 90
      },
      "core/src/health/HealthChecker.ts": {
        "branches": 90,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "setupFilesAfterEnv": ["<rootDir>/core/src/health/__tests__/setup.ts"],
    "testTimeout": 30000,
    "maxWorkers": "50%",
    "verbose": true,
    "detectOpenHandles": true,
    "forceExit": true
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.6.0",
    "@types/supertest": "^2.0.12",
    "express": "^4.18.2",
    "ioredis": "^5.3.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  }
}
#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Run type checking
echo "ğŸ” Running TypeScript type checking..."
cd client && npm run type-check

# Run linting
echo "ğŸ” Running ESLint..."
cd client && npm run lint

# Check for circular dependencies in infrastructure
echo "ğŸ” Checking for circular dependencies in infrastructure..."
npm run analyze:infrastructure:circular

# Validate module boundaries
echo "ğŸ” Validating module boundaries..."
npm run validate:boundaries:infrastructure

echo "âœ… Pre-commit checks passed!"
